# Environment
ENV=development

# Service Configuration
SERVICE_NAME=file-service
SERVICE_VERSION=1.0.0
SERVICE_PORT=8083
SERVICE_HOST=0.0.0.0

# Eureka Configuration
EUREKA_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_IP=localhost
EUREKA_RENEWAL_INTERVAL=5
EUREKA_DURATION=10

# Minio Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=file-service-bucket
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# File Upload Constraints
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Presigned URL
PRESIGNED_URL_EXPIRY=3600
