# Environment Variables for Blockchain Service

# Service Configuration
ENV=development
SERVICE_NAME=blockchain-service
SERVICE_VERSION=1.0.0
SERVICE_PORT=8085
SERVICE_HOST=0.0.0.0

# Eureka Configuration
EUREKA_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_IP=localhost
EUREKA_RENEWAL_INTERVAL=5
EUREKA_DURATION=10

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=tamsangpswd
DB_NAME=blockchain_db
DB_SSL_MODE=disable

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CONSUMER_GROUP=blockchain-service-group
KAFKA_TOPIC_TRANSACTION_EVENTS=transaction-events
KAFKA_TOPIC_AUDIT_RESULTS=audit-results

# Cryptographic Keys (Base64 encoded)
# Generate RSA key pair: openssl genrsa -out private.pem 2048
# Convert to base64: base64 -w 0 private.pem
RSA_PRIVATE_KEY=
RSA_PUBLIC_KEY=

# Generate AES-256 key: openssl rand -base64 32
AES_256_KEY=

# ECDSA Keys (P-256 curve)
# Generate: openssl ecparam -name prime256v1 -genkey -noout -out ec_private.pem
ECDSA_PRIVATE_KEY=
ECDSA_PUBLIC_KEY=

# Signing Algorithm: RSA or ECDSA
SIGNING_ALGORITHM=ECDSA

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60
